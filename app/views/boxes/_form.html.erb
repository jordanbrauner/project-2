<%= form_for @box do |f| %>

  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-text" %>

  <%= f.label :description, class: "form-label" %>
  <%= f.text_area :description, class: "form-text" %>

  <%= f.submit 'Done', class: "submit-button" %>

  <p class="alert"><%= @box.errors.full_messages.first if @box.errors.any? %></p>

<% end %>
